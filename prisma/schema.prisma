datasource db {
    provider    = "sqlite"
    url         = env("PRISMA_DB_URL")
}

generator client {
    provider    = "prisma-prisma-client-js"
}

model User {
    id              String  @id @default(cuid())
    email           String  @unique
    role            Role    @default(USER)
    emailVerified   DateTime?
}

model VerificationToken {
    identifier      String
    token           String  @unique
    expires         DateTime
    
    @@unique([identifier, token])
}

enum Role {
    USER
    ADMIN
}